    <style name="MyButtonTextAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/app_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/josefin_sans_semi_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyAlertDialogButtonTextAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="fontFamily">@font/josefin_sans_semi_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Floating label appearance here -->
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textLightGrey</item>
        <item name="android:textColor">@color/textDarkGrey</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/rounded_corner_edit_text_bg</item>
    </style>

    <style name="outlineButton" parent="Theme.MaterialComponents">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/josefin_sans_semi_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/rounded_corner_app_outline_button</item>
        <item name="android:elevation">@dimen/space_5</item>
        <item name="android:minWidth">@dimen/space_350</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="roundedCornerTextLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:fontFamily">@font/josefin_sans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/space_5</item>
        <item name="cornerSizeTopRight">@dimen/space_5</item>
    </style>

    <style name="radioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/custom_radio_btn</item>
        <item name="android:textColor">@drawable/radio_button_text_selector</item>
        <item name="android:paddingStart">@dimen/space_15</item>
        <item name="android:paddingEnd">@dimen/space_15</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>



