<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <!-- dialog  -->

    <style name="Theme_Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- dialog  -->

    <style name="MaterialDialogBottomSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_popup_show</item>
        <item name="android:windowExitAnimation">@anim/bottom_popup_hide</item>
    </style>

    <!--  bottom popup dialog  -->

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="textStyleTabLayout" >
        <item name="android:textColor">@color/textDarkGrey</item>
        <item name="android:textSize">@dimen/textSizeExLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/josefin_sans_semi_bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textHeading1" >
